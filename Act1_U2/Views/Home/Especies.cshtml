@model Act1_U2.Models.ViewModel.ClasesViewModel;
@{
    Layout = "MainLayout";
}

<main>

    <h1>
        <img src="~/clases/@(Model.IdClase).png" /> @Model.NombreClase
    </h1>

    <div class="listaEspecies2">
       @foreach (var i in Model.Especies)
       {
            <a href="~/Home/Especie/@(i.Nombre.Replace(" ","-"))">
                <img src="~/especies/@(i.IdEspecie).jpg" title="@i.Nombre" />
            </a>
       }   
       
    </div>

    <script>

        var c = document.querySelector("main h1 img").cloneNode();
        document.querySelector("main h1").appendChild(c);
    </script>

</main>

