@model Act1_U2.Models.ViewModel.EspecieIndividualViewModel;
@{
    Layout = "MainLayout";
}

<main>

    <div class="especieficha1">
        <img src="~/especies/@(Model.Id).jpg" />
        <div>
            <h1>@Model.Nombre</h1>
            <p><label>Clase:</label><a href="~/Home/Especies">@Model.NombreClase</a></p>
            <p><label>Peso:</label>@(Model.Peso)kg</p>
            <p><label>Tamaño:</label>@(Model.Tamaño)cm</p>
            <p><label>Habitat:</label>@Model.Habitat</p>
            <p><label>Descripción:</label></p>
            <p>@Model.Descripcion</p>
        </div>

        <a href="~/Home/Especies/@(Model.NombreClase)">Regresar</a>
    </div>
</main>

