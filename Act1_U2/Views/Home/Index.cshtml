@model IEnumerable<Act1_U2.Models.ViewModel.IndexViewModel>;
@{
    Layout = "MainLayout";
}

<main>

    <div class="slides">
        <img src="~/images/carousel1.jpg" />
    </div>

    <h1>Clasificación de los vertebrados</h1>

    <div class="clases">

        @foreach(var a in Model)
        {
            <div>
                <a href="~/Home/Especies/@(a.NombreClase)">
                    <img src="~/clases/@(a.Id).jpg" />
                    <h1>@a.NombreClase</h1>
                    <p>@a.Descripcion</p>
                </a>
            </div>
        }
    </div>

</main>

